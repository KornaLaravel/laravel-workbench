{
    "name": "orchestra/workbench",
    "description": "Workbench Companion for Laravel Packages Development",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Mior Muhammad Zaki",
            "email": "crynobone@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Orchestra\\Workbench\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Orchestra\\Workbench\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/",
            "Workbench\\Database\\": "workbench/database/"
        }
    },
    "require": {
        "php": "^8.0",
        "orchestra/testbench-core": "^7.28.0 || ^8.8.0"
    },
    "require-dev": {
        "fakerphp/faker": "^1.21",
        "laravel/framework": "^10.17",
        "mockery/mockery": "^1.5.1",
        "orchestra/canvas": "^8.2",
        "orchestra/canvas-core": "^7.2 || ^8.2",
        "phpstan/phpstan": "^1.10.7",
        "phpunit/phpunit": "^9.6"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.x-dev"
        },
        "laravel": {
            "providers": [
                "Orchestra\\Workbench\\WorkbenchServiceProvider"
            ]
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@composer run clear",
            "@composer run prepare"
        ],
        "clear": "@php testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "ci": [
            "@composer audit",
            "@composer run prepare",
            "@php vendor/bin/pint",
            "@php vendor/bin/phpstan analyse"
        ]
    },
    "prefer-stable": true,
    "minimum-stability": "dev"
}
